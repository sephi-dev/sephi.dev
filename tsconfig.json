{
  "files": [
    "./types/custom.d.ts"
  ],
  "compilerOptions": {
    "typeRoots": ["./types"],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@glossy/*": [
        "glossy/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "public"
  ]
}
